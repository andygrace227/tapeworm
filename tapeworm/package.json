    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.15",
    "typedoc-plugin-rename-defaults": "^0.7.3",
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  }
