{
    "presets": [
        [
            "@babel/preset-env",
            {
                "modules": false
            }
        ],
        [
            "@babel/preset-typescript",
            {"allowDeclareFields": true}
        ]
    ],
    "plugins": [
        "@atgs/babel-plugin-tapeworm-decorator",
        [
            "@babel/plugin-syntax-decorators",
            {
                "decoratorsBeforeExport": true
            }
        ]
    ]
}